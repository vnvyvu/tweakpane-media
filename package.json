{
	"name": "tweakpane-media",
	"version": "0.0.6",
	"description": "Add image/video to Tweakpane",
	"main": "dist/tweakpane-media.min.js",
	"types": "dist/types/index.d.ts",
	"author": "vyvu",
	"license": "MIT",
	"files": [
		"dist"
	],
	"keywords": [
		"tweakpane",
		"plugin",
		"media",
		"video",
		"image",
		"tweakpane threejs",
		"drag",
		"drop",
		"customizable",
		"support threejs"
	],
	"scripts": {
		"prepare": "run-s clean build",
		"prepublishOnly": "npm test",
		"start": "npm run watch",
		"test": "eslint --ext .ts \"src/**/*.ts\"",
		"assets": "run-s clean build assets:version assets:zip",
		"assets:version": "node scripts/assets-append-version.mjs",
		"assets:zip": "zip -x \"*types*\" -j -r $(cat package.json | npx json name)-$(cat package.json | npx json version).zip dist",
		"clean": "rimraf --glob dist *.tgz *.zip",
		"build": "run-p build:*",
		"build-dev": "rollup --config rollup.config.mjs",
		"build:dts": "tsc --project src/tsconfig-dts.json",
		"build:prod": "rollup --config rollup.config.mjs --environment BUILD:production",
		"format": "run-p format:*",
		"format:scss": "prettier --parser scss --write \"src/sass/**/*.scss\"",
		"format:ts": "eslint --ext .ts --fix \"src/**/*.ts\"",
		"watch": "run-p watch:*",
		"watch:sass": "onchange --initial --kill \"src/sass/**/*.scss\" -- npm run build:prod",
		"watch:ts": "onchange --initial --kill \"src/**/*.ts\" -- rollup --config rollup.config.mjs"
	},
	"devDependencies": {
		"@rollup/plugin-alias": "^4.0.3",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"@rollup/plugin-replace": "^5.0.2",
		"@rollup/plugin-typescript": "^11.0.0",
		"@tweakpane/core": "^1.1.5",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.4",
		"rimraf": "^4.3.0",
		"rollup": "^3.18.0",
		"rollup-obfuscator": "^3.0.2",
		"rollup-plugin-cleanup": "^3.2.1",
		"rollup-plugin-terser": "^7.0.2",
		"sass": "^1.58.3",
		"typescript": "^4.9.5",
		"tweakpane": "^3.1.6"
	}
}
